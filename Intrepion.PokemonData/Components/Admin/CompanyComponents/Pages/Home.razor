@page "/admin/company"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Company Home</PageTitle>

<h1>Company Home</h1>
<h6><a href="/admin/company/add">Create New</a></h6>

<div class="container-fluid">
  <table class="table table-hover table-primary table-striped">
    <thead>
      <tr>
        <th>Actions</th>
        <th>Is Test?</th>
        <th>Name</th>
        @* TableHeaderCodePlaceholder *@
      </tr>
    </thead>
    <tbody>
      @if (companies is not null)
      {
        @foreach (var company in companies)
        {
          <tr>
            <td>
              <div class="btn-group">
                <a class="btn btn-primary btn-sm btn-info" href="/admin/company/view/@company.Id" title="View">
                  <i class="bi bi-eye"></i>
                </a>
                <a class="btn btn-primary btn-sm" href="/admin/company/edit/@company.Id" title="Edit">
                  <i class="bi bi-pencil"></i>
                </a>
              </div>
            </td>
            <td>
              @if (company.IsTest)
              {
                <span class="badge bg-success">Yes</span>
              }
              else
              {
                <span class="badge bg-warning text-dark">No</span>
              }
            </td>
            <td>@company?.Name</td>
            @* TableRowCodePlaceholder *@
          </tr>
        }
      }
    </tbody>
  </table>
</div>

@code {
  private ICollection<Company>? companies { get; set; }

  protected override async Task OnParametersSetAsync()
  {
    await ReloadAsync();
  }

  private async Task ReloadAsync()
  {
    companies = new List<Company>();

    using var context = DbFactory.CreateDbContext();
    var query = context.Companies?.AsQueryable();

    if (query is not null)
    {
      companies = await query
        @* QueryIncludeCodePlaceholder *@
        .AsNoTracking().ToListAsync();
    }
  }
}

